<section id="log">
            <div class="containerlog">
                <div class="user signinBx">
                    <div class="imgBx"><img src="/img/loginAd.jpg"></div>
                    <div class="formBx">
                        <form action="/authentication/signin" method="POST">
                            <h2>INICIAR SESION</h2>
                            <input type="text" name="nombre" placeholder="Nombre de Usuario">
                            <input type="password" name="password" placeholder="Contraseña">
                            <input type="submit" name="" value="Login">
                            <p class="signup">no tienes cuenta? <a href="#" onclick="toggleForm();">crear cuenta.</a></p>
                        </form>
                    </div>
                </div>
                <div class="user signupBx">
                    <div class="formBx">
                        <form action="/authentication/signup" method="POST">
                            <h2>CREAR CUENTA</h2>
                            <input type="text" name="nombre" placeholder="nombre de usuario">
                            <input type="text" name="apellidos" placeholder="apellidos de usuario">
                            <input type="date" name="fechaNac" placeholder="fecha de nacido ">
                            <input type="number" name="telefono" placeholder="ingrese su telefono">
                            <input type="hidden" name="grado" value=3>
                            <input type="hidden" name="departamento" value=5>
                            <input type="password" name="password" placeholder="Ingrese su nueva contraseña">
                            <input type="submit" name="" value="Sign up">
                            <p class="signup">ya tienes cuenta? <a href="#" onclick="toggleForm();">hacer login.</a></p>
                        </form>
                    </div>
                    <div class="imgBx"><img src="/img/loginAt.jpg"></div>
                </div> 
            </div>
        </section>
        <script type="text/javascript">
            function toggleForm(){
                var containerlog = document.querySelector('.containerlog');
                var section = document.querySelector('section');
                containerlog.classList.toggle('active')
                section.classList.toggle('active')
            }
        </script>